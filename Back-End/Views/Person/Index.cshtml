@model PersonViewModel

@{
  ViewBag.Title = "Person"; 
}

<form asp-controller="Person" asp-action="Index" method="post">
  <div class="input-group mb-3">
    <input asp-for="SearchTerm" class="form-control" placeholder="Search" />
    <div class="input-group-text">
      <span class="pe-2 text-secondary fst-italic">Aa</span>
      <input asp-for="CaseSensitive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-secondary">Search</button>
  </div>
</form>

<div class="container person-table mb-3">

  <div class="row">
    <div class="col">
      <form asp-controller="Person" asp-action="Index" method="post">
        <input hidden asp-for="NameSortParam" />
        <input hidden asp-for="SearchTerm" />
        <input hidden asp-for="CaseSensitive" />
        <button type="submit" class="button-sort">Name</button>
      </form>
    </div>

    <div class="col">Phone</div>

    <div class="col">
      <form asp-controller="Person" asp-action="Index" method="post">
        <input hidden asp-for="CitySortParam" />
        <input hidden asp-for="SearchTerm" />
        <input hidden asp-for="CaseSensitive" />
        <button type="submit" class="button-sort">City</button>
      </form>
    </div>

    <div class="col">
      <form asp-controller="Person" asp-action="Index" method="post">
        <input hidden asp-for="CountrySortParam" />
        <input hidden asp-for="SearchTerm" />
        <input hidden asp-for="CaseSensitive" />
        <button type="submit" class="button-sort">Country</button>
      </form>
    </div>

    <div class="col-1"></div>

  </div>

  @foreach (var person in Model.People)
  {
    <partial name="_PersonPartialView" model="@person" />
  }

</div>

<form asp-controller="Person" asp-action="Create">
  <div class="row">

    <div class="col align-text-top">
      <input asp-for="personCreateViewModel.Name" class="form-control" placeholder="Name" />
      <span asp-validation-for="personCreateViewModel.Name" class="text-danger fs-8"></span>
    </div>

    <div class="col align-text-top">
      <input asp-for="personCreateViewModel.PhoneNumber" class="form-control" placeholder="Phone Number" />
      <span asp-validation-for="personCreateViewModel.PhoneNumber" class="text-danger fs-8"></span>
    </div>

    <div class="col align-text-top">
      <div class="input-group w-100">
        <input asp-for="personCreateViewModel.CityName" class="form-control" placeholder="City name" />
        <div class="input-group-append">
          <select asp-for="personCreateViewModel.CityId" asp-items="Model.Cities" class="form-select custom-select"></select>
        </div>
      
        <span asp-validation-for="personCreateViewModel.CityName" class="text-danger fs-8"></span>
        <span asp-validation-for="personCreateViewModel.CityId" class="text-danger fs-8"></span>
      </div>
    </div>

    <div class="col align-text-top">
      <div class="input-group w-100">
        <input asp-for="personCreateViewModel.CountryName" class="form-control" placeholder="Country name" />
        <div class="input-group-append">
          <select asp-for="personCreateViewModel.CountryId" asp-items="Model.Countries" class="form-select custom-select"></select>
        </div>
      
        <span asp-validation-for="personCreateViewModel.CountryName" class="text-danger fs-8"></span>
        <span asp-validation-for="personCreateViewModel.CountryId" class="text-danger fs-8"></span>
      </div>
    </div>

    <div class="col-1 align-text-top">
      <button type="submit" class="btn btn-secondary">Add</button>
    </div>

  </div>
</form>
