<div class="container">
  
  <div class="d-flex justify-content-center">
      <span class="display-6 mb-5">Check your temperature</span>
    </div>

  @if (ViewBag.FeverCheckMessage != null)
  {
    <div class="d-flex justify-content-center">
      <div class="alert @ViewBag.FeverCheckColor w-25 d-flex justify-content-center">
        @ViewBag.FeverCheckMessage
      </div>
    </div>
  }

  <form asp-route="FeverCheck" method="post">
    <div class="input-group justify-content-center">
      <input name="temperature" type="number" step="0.1" class="form-temperature-entity form-control" aria-label="Temperature">
      <select name="scale" class="form-temperature-entity form-select" aria-label="Scale">
        <option value="c">&deg;C</option>
        <option value="f">&deg;F</option>
      </select>
      <button typeof="submit" class="btn btn-outline-primary">Check</button>
    </div>
  </form>

</div>