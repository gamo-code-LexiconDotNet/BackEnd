@{
  ViewBag.Title = "AJAX"; 
}

<div class="container">
  <div class="row justify-content-end mb-3">
    <div class="col-3 d-inline-flex">
      <button id="people" class="btn btn-secondary me-3" type="button">People</button>
      <div class="input-group">
        <input id="id" type="text" class="form-control" placeholder="Id">
        <button id="details" class="btn btn-secondary" style="border-right: 2px solid #ced4da;" type="button">Details</button>
        <button id="delete" class="btn btn-secondary" type="button">Delete</button>
      </div>
    </div>
  </div>
  
    <div class="container person-table-ajax">
      <div class="row">
        <div class="col-2">Name</div>
        <div class="col-1">Phone</div>
        <div class="col">Language</div>
        <div class="col-2">City</div>
        <div class="col-2">Country</div>
        <div class="col-auto"><span class="invisible"><i class="bi bi-trash"></i></span></div>
      </div>
      <div class="row">
        <div id="content" class="col">
          <div class="row p-2">Use controls to access people.</div>
        </div>
      </div>
    </div>

</div>